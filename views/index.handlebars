<header class="container-fluid">
  <div class="row">
    <div class="title col-12 m-3">
      <h1 class="text-center">Devour The Burger</h1>
      <p class="text-center">Devour Your Desired Burger or Craft Your Own to Devour</p>
    </div>
  </div>
</header>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="burger-cards d-flex my-auto">

      <div class="card m-3 col-sm-12 col-md-6">
        <div class="card-body">
          <h2 class="card-title text-center">Burgers to be Devoured</h2>
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
              <div class="row">
                <div class="col-4">{{burger_name}}</div>
                <div class="col-4">
                  {{#unless devoured}}
                  <button class="btn btn-outline-success devour-burger" data-id="{{id}}"
                    data-devoured="{{devoured}}">Devour!</button>
                  {{/unless}}
                </div>
                <div class="col-4">
                  <button class="btn btn-outline-danger delete-btn" data-id="{{this.id}}">Yuck Trash It!</button>
                </div>
              </div>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>

      <div class="card m-3 col-sm-12 col-md-6">
        <div class="card-body">
          <h2 class="card-title text-center">Devoured Burgers</h2>
          <ul>
            {{#each burgers}}
            {{#if devoured}}
              <div class="row">
                <div class="col-8">{{burger_name}}</div>
                <div class="col-4">
                  <button class="btn btn-outline-danger delete-btn" data-id="{{this.id}}">Trash It!</button>
                </div>
              </div>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>

    </div>
  </div>

      <div class="row justify-content-center">
        <div class="card form-card m-3 p-3 col-sm-12 col-md-4 col-lg-2">
          <form class="form-group burger-input">
            <p for="addingNewBurger" class="m-2"><strong>Create A Burger</strong></p>
            <textarea class="form-control" id="burger" rows="2" cols="10"></textarea>
            <button class="btn btn-outline-warning burgerBtn m-2" type="submit">Add Your Burger</button>
          </form>
        </div>
      </div>


</div>